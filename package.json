{
  "name": "@asdf-vm/actions",
  "version": "2.1.0",
  "description": "asdf github actions",
  "repository": "https://github.com/asdf-vm/actions",
  "author": "Victor Borja <vborja@apache.org>",
  "license": "Apache-2.0",
  "scripts": {
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.ts\" --cache",
    "build": "esbuild lib/current/main.ts lib/install/main.ts lib/plugin-test/main.ts lib/plugins-add/main.ts lib/setup/main.ts --bundle --outdir=. --target=node16 --platform=node"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.0",
    "@actions/io": "1.1.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "esbuild": "0.20.1",
    "eslint": "8.36.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.4",
    "typescript": "5.3.3"
  }
}
